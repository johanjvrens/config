{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier", "compat"],
  "rules": {
    "prettier/prettier": "error",
    "compat/compat": 1
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "settings": {
    "polyfills": ["fetch", "promise"]
  }
}
